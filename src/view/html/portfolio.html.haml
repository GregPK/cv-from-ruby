= title(2,i18n.portfolio,'portfolio')

.row
  - [resume.portfolio_freelance].each do |portfolio_group|
    .thumbnails
      - portfolio_group.each do |item|
        .col-md-4.portitem
          .thumbnail
            %a{href: item.url}
              %img{alt: item.title, src: img(item.img_file), style: "width: 300px; height: 200px;"}/
              // %span.url.muted= item.url
            .caption
              %h3= item.title
              %p=item.descr
              - if item.responsibilities
                %p
                  %strong Responsibilities:
                  = item.responsibilities